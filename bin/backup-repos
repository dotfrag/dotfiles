#!/bin/bash

set -euo pipefail

cd "$(mktemp -d)"
mkdir repos
cd repos

gh repo list --source |
  awk '{print $1}' | sort |
  xargs -I{} git clone --mirror git@github.com:{}

cd ..

tar cf repos.tar repos
zstd -T0 --ultra -20 repos.tar
du -sh repos.tar repos.tar.zst
mv -vf repos.tar.zst "${HOME}/repos-$(date +%Y%m%d).tar.zst"

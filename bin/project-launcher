#!/bin/bash

projects_file=${XDG_DATA_HOME:-${HOME}/.local/share}/projects

declare -A projects

while read -r line; do
  projects[${line##*/}]=${line}
done < "${projects_file}"

project=$(printf "%s\n" "${!projects[@]}" | rofi -dmenu -i)

if [[ -z ${project} ]]; then
  exit 1
fi

if [[ $1 == "vscode" ]]; then
  code "${projects[${project}]}"
elif [[ $1 == "nvim" ]]; then
  if command -v neovide &> /dev/null; then
    neovide -- --cmd "cd ${projects[${project}]}"
  else
    kitty nvim --cmd "cd ${projects[${project}]}"
  fi
else
  echo "No editor specified."
  notify-send "No editor specified."
  exit 1
fi
